<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net461</TargetFrameworks>
    <RootNamespace>Microsoft.Pc</RootNamespace>
    <Antlr4JavaExecutable Condition=" '$(OS)' != 'Windows_NT' ">/usr/bin/java</Antlr4JavaExecutable>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Antlr4" Version="4.6.5-beta001" />
    <PackageReference Include="System.Collections.Immutable" Version="1.4.0" />
    <PackageReference Include="System.ValueTuple" Version="4.4.0" />
  </ItemGroup>
  
  <ItemGroup>
    <Antlr4 Include="Antlr/PParser.g4">
      <Generator>MSBuild:Compile</Generator>
      <CustomToolNamespace>Microsoft.Pc</CustomToolNamespace>
      <Listener>True</Listener>
      <Visitor>True</Visitor>
    </Antlr4>
    <Antlr4 Include="Antlr/PLexer.g4">
      <Generator>MSBuild:Compile</Generator>
      <CustomToolNamespace>Microsoft.Pc</CustomToolNamespace>
    </Antlr4>
  </ItemGroup>

</Project>
